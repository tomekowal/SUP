{% extends "devices/devices.dtl" %}
{% block yield %}
    <table class="devices">
      <tr>
      	<th>Identity</th>
	      <td>{{ device.identity }}</td>
      	<th>Last contact</th>
	      <td>{{ device.last_contact }}</td>
      	<th>Ip</th>
	      <td>{{ device.ip }}</td>
      </tr>
      <tr>
        <th>Pending jobs</th>
				{% for job in device.jobs %}
        	<td> {{ job.message }}</td>
	      {% endfor %}
      </tr>
    </table>
{% endblock %}
